{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "author": "Khabib",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "node ./dist/server.js",
    "dev": "nodemon ./src/server.ts",
    "build": "npm run clean && tsc",
    "check": "npm run format-check && npm run lint-check && tsc --noEmit",
    "rome": "rome ci src && tsc --noEmit",
    "format-check": "rome format src",
    "format-apply": "rome format --write src",
    "lint-check": "rome check src",
    "lint-apply": "rome check --apply-unsafe src",
    "make-schema": "npx ts-node src/database/schema.ts",
    "drop-schema": "npx ts-node src/database/drop-schema.ts",
    "make-test-data": "npx ts-node src/database/populate.ts"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15",
    "pg": "^8.7.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.6.3",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.3",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "rome": "^12.1.3",
    "typescript": "^5.2.2"
  }
}
